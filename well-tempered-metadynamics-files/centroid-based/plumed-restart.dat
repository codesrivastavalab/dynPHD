# Metadynamics run parameters
# using centroid based CV
RESTART
whole: GROUP ATOMS=1-1895
WHOLEMOLECULES ENTITY0=whole


first: CENTER ATOMS=1-1889

phi: ANGLE ATOMS=first,1890,1893

last: CENTER ATOMS=1890-1895

comdist: DISTANCE ATOMS=first,last NOPBC


LOWER_WALLS ARG=comdist AT=1.20 KAPPA=5000.0  OFFSET=0 LABEL=lwall

UPPER_WALLS ARG=comdist AT=2.80 KAPPA=5000.0  OFFSET=0 LABEL=uwall

metad: METAD ARG=comdist,phi PACE=500 HEIGHT=1  SIGMA=0.05,0.35 FILE=HILLS BIASFACTOR=6.0 TEMP=310.0

PRINT ARG=comdist,phi,metad.bias STRIDE=1 FILE=colvar














